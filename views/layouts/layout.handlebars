<body>
    <div id="particles-js"></div>
    <header>
        <div class="misc">
            <div class="container-fluid">
                <p class="pull-right">Contact Admin :
                    <a href="mailto:me@mrinalraj.com">me@mrinalraj.com</a>
                </p>
            </div>
        </div>

        <div class="banner">
            <div class="container">
                <div class="row">
                    <div class="col-xs-1">
                        <img src="{{path}}img/utu-logo.png" height="80px" width="80px">
                    </div>
                    <div class="col-xs-11">
                        <h2>Uttarakhand Technical University</h2>
                        <h4>Practical Examination Portal</h4>
                    </div>
                </div>
            </div>
        </div>

        <nav class="">
            <div class="container">
                <ul>
                    <li>
                        <a href="/">HOME</a>
                    </li>
                    {{#if user}} {{#if dp}}
                    <li>
                        <a href="{{type}}/dashboard">DASHBOARD</a>
                    </li>
                    {{/if}}
                    <li class="pull-right">
                        <a href="/logout">LOGOUT</a>
                    </li>
                    {{else}}
